<aside class="col-md-4 blog-sidebar">
  <div class="p-3 mb-3 bg-light rounded">
    <h4 class="font-italic">About</h4>
    <p class="mb-0">Hi, my name is Sashweana. I'm a budding Ruby on Rails developer who happens to be a retro gamer and a photography enthusiast.</p>
  </div>

    <%= source_helper("alert alert-info blog-sidebar-source") %>

  <% if logged_in?(:site_admin) %>
    <div class="p-3">
      <h4 class="font-italic">Admin Panel</h4>
      <ol class="list-unstyled">
        <li><%= link_to 'Write a new Blog', new_blog_path %></li>
        <li><%= link_to "Topics", topics_path %></li>
    </div>
  <% end %>

  <div class="p-3">
    <h4 class="font-italic">Topics</h4>
    <% @side_bar_topics.each do |topic| %>
      <p class="mb-0"><%= link_to topic.title, topic_path(topic) %></p>
    <% end %>
  </div>

  <div class="p-3">
    <h4 class="font-italic">Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/Sashweana" target="_blank"><%= fa_icon "github" %></a></li>
      <li><a href="https://www.linkedin.com/in/sashweana/" target="_blank"><%= fa_icon "linkedin" %></a></li>
      <li><a href="https://www.facebook.com/sashweana" target="_blank"><%= fa_icon "facebook" %></a></li>
      <li><a href="https://twitter.com/DamnItsSash" target="_blank"><%= fa_icon "twitter" %></a></li>
    </ol>
  </div>
</aside>