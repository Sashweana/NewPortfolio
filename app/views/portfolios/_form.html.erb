<%= form_for(@portfolio_item) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, id: :blog_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, id: :blog_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.file_field :main_image %>
      </div>

      <div class="form-group">
        <%= f.file_field :thumb_image %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, id: :blog_body, class: "form-control", rows: 13 %>
      </div>
    </div>
  </div> 

  <hr>
  
  <div class="col-md-12">
    <h3>Technologies Used :</h3>

    <div>
      <%= f.fields_for :technologies do |technologies_form| %>
        <div class="form-group">
          <%= technologies_form.label :name %>
          <%= technologies_form.text_field :name, class: "form-control" %>
        </div>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit "Save Portfolio", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>